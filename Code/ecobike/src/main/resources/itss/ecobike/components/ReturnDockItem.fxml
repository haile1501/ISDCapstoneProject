<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox alignment="CENTER_LEFT" prefHeight="180.0" prefWidth="715.0" spacing="30.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="itss.ecobike.views.components.ReturnDockItem">
    <children>
        <ImageView fitHeight="153.0" fitWidth="216.0" layoutX="21.0" layoutY="15.0" pickOnBounds="true">
            <image>
                <Image url="@../images/dock.jpg" />
            </image>
        </ImageView>
        <VBox maxHeight="200.0" maxWidth="358.0" minHeight="100.0" minWidth="200.0" prefHeight="181.0" prefWidth="358.0" spacing="15.0">
            <children>
                <Label fx:id="dockName" style="-fx-font-weight: bold;" text="Dock Name">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Label>
                <Label fx:id="address" minHeight="-Infinity" minWidth="-Infinity" prefHeight="20.0" prefWidth="361.0" text="Address" />
                <Label fx:id="emptyDockingPoints" text="Available bikes: ">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets top="20.0" />
            </padding>
        </VBox>
      <Button fx:id="select" mnemonicParsing="false" style="-fx-background-color: #00a13f;" text="Select" textFill="WHITE" />
    </children>
    <padding>
        <Insets left="20.0" />
    </padding>
</HBox>
